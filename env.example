# Supabase Configuration
# Obtenez ces valeurs depuis votre dashboard Supabase : https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Supabase Management API
# Créez un Personal Access Token (PAT) sur : https://app.supabase.com/account/tokens
# ⚠️ Ne jamais commiter ce token dans Git - il a les mêmes privilèges que votre compte
SUPABASE_MANAGEMENT_API_TOKEN=your_management_token_here

# Application URL
# En développement : http://localhost:3000
# En production : https://your-project.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe Configuration
# Obtenez vos clés depuis : https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
# Webhook secret depuis : https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Yousign Configuration (Signatures électroniques)
# Obtenez vos clés depuis : https://app.yousign.com/developers
YOUSIGN_API_KEY=your_yousign_api_key
YOUSIGN_WEBHOOK_SECRET=your_yousign_webhook_secret

# Mindee Configuration (OCR / Reconnaissance de documents)
# Créez un compte gratuit sur : https://platform.mindee.com/
# Plan gratuit : 250 pages/mois - spécialisé pour documents français (CNI, bulletins de salaire, etc.)
MINDEE_API_KEY=your_mindee_api_key

# Resend Configuration (Emails)
# Créez un compte sur https://resend.com et obtenez votre clé API
RESEND_API_KEY=your_resend_api_key_here
# Adresse email d'expédition (doit être vérifiée sur Resend)
RESEND_FROM_EMAIL=Talok <noreply@votre-domaine.com>
# Adresse de réponse
RESEND_REPLY_TO=support@votre-domaine.com
# Clé API interne pour les appels entre services (génère avec: openssl rand -hex 32)
# Utilisée par les services internes pour appeler /api/emails/send sans authentification utilisateur
INTERNAL_EMAIL_API_KEY=your_internal_email_api_key_here

# Node Environment
# Ne pas modifier manuellement, géré automatiquement par Vercel
NODE_ENV=production

# ============================================
# NOUVELLES VARIABLES (Phase 2)
# ============================================

# Twilio Configuration (SMS)
# Créez un compte sur https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+33xxxxxxxxx
# Optionnel : Messaging Service pour envoi groupé
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid_here

# Web push Notifications (VAPID)
# Générez vos clés avec : npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:support@talok.fr

# Sentry Configuration (Monitoring & Error Tracking)
# Créez un compte sur https://sentry.io
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your-org
SENTRY_PROJECT=talok
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# OpenAI Configuration (AI Features)
# Créez une clé API sur https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# GPT-5.2 Models (SOTA Décembre 2025)
# GPT-5.2 offre un contexte étendu jusqu'à 400k tokens et un output max de 128k tokens
# - instant : Tâches rapides quotidiennes (classification, extraction)
# - thinking : Raisonnement approfondi (par défaut pour l'assistant)
# - pro : Précision maximale pour tâches critiques (legal, financier)
OPENAI_MODEL_INSTANT=gpt-5.2-instant
OPENAI_MODEL_THINKING=gpt-5.2-thinking
OPENAI_MODEL_PRO=gpt-5.2-pro

# Modèle par défaut pour l'assistant (utilise GPT-5.2 Thinking)
OPENAI_MODEL=gpt-5.2-thinking

# Aliases pour compatibilité avec l'ancien code (optionnel)
OPENAI_MODEL_FAST=gpt-5.2-instant
OPENAI_MODEL_STANDARD=gpt-5.2-thinking
OPENAI_MODEL_ADVANCED=gpt-5.2-thinking
OPENAI_MODEL_REASONING=gpt-5.2-pro

# Langfuse Configuration (AI Monitoring - optionnel)
# Créez un compte sur https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# Database URL pour PostgresSaver (LangGraph Checkpoints)
# Format: postgresql://user:password@host:port/database
# Utilisé pour la persistance des états d'exécution des agents multi-agent
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres

# Google Maps API (Géolocalisation - optionnel)
# Créez une clé sur https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Cron Jobs Secret (pour sécuriser les endpoints cron)
# Générez une chaîne aléatoire : openssl rand -hex 32
CRON_SECRET=your_cron_secret_here

# ============================================
# SÉCURITÉ - CHIFFREMENT (SOTA 2026)
# ============================================

# Clé de chiffrement AES-256 pour les données sensibles (IBAN, secrets 2FA)
# Générez une clé sécurisée avec : openssl rand -base64 32
# ⚠️ CRITIQUE : Ne JAMAIS perdre cette clé - les données chiffrées seraient irrécupérables
# ⚠️ Sauvegardez cette clé dans un gestionnaire de secrets sécurisé (Vault, AWS KMS, etc.)
ENCRYPTION_KEY=your_encryption_key_here_base64_or_hex
