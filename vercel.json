{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["cdg1"],
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 10
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 120
    },
    "app/api/pdf/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/generate-monthly-invoices",
      "schedule": "0 6 1 * *"
    },
    {
      "path": "/api/cron/rent-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/irl-indexation",
      "schedule": "0 10 1 * *"
    },
    {
      "path": "/api/cron/lease-expiry-alerts",
      "schedule": "0 8 * * 1"
    },
    {
      "path": "/api/cron/subscription-alerts",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/notifications",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/check-cni-expiry",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/refresh-analytics",
      "schedule": "0 4 * * *"
    }
  ]
}

